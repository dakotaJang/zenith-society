<%- layout('layout') %>
<div>
    <h3><%- title %></h3>
    <h4>Are you sure you want to delete the following activity?</h4>
        <table class="table table-striped table-condensed">
        <tr>
            <td>Description</td>
            <td><%- data.Description %></td>
        </tr>
        <tr>
            <td>Create Date</td>
            <td><%- data.CreateDate %></td>
        </tr>
    </table>
    <form method="post" action="/activities/delete">
        <input type="hidden" name="_id" value="<%= data._id %>">
        <input type="submit" value="Delete" class="btn btn-danger">
        <a href="/activities/list" class="btn btn-success">Cancel</a>
    </form>
</div>